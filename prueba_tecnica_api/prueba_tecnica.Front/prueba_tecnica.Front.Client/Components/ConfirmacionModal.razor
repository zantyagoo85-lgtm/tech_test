@if (Visible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,0.5);" aria-modal="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Titulo</h5>
                    <button type="button" class="btn-close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    <p>@Mensaje</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="OnCancel">No</button>
                    <button class="btn btn-danger" @onclick="OnConfirm">Sí</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public string Titulo { get; set; } = "Confirmar";
    [Parameter] public string Mensaje { get; set; } = "";
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
}
